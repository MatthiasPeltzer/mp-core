{
	"name": "mpc/mp-core",
	"description": "MPC Distribution Package",
	"license": [
		"GPL-3.0-or-later"
	],
  "type": "typo3-cms-extension",
	"authors": [
		{
			"name": "Matthias Peltzer",
			"email": "mail@mpeltzer.de",
			"homepage": "https://www.mpeltzer.de/",
			"role": "Developer"
		}
	],
  "autoload": {
		"psr-4": {
			"Mpc\\MpCore\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mpc\\MpCore\\": "Tests/"
		}
	},
	"config": {
		"vendor-dir": "../default.instance/vendor",
		"bin-dir": "../default.instance/bin"
	},

	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": "../default.instance",
			"extension-key": "mp_core"
		}
	},
	"homepage": "https://www.mpeltzer.de/",
	"replace": {
		"typo3-ter/mp-core": "self.version"
	},
	"require": {
    "php": ">=8.2",
    "b13/container": "^3.1",
    "friendsoftypo3/content-blocks": "^1.3",
    "typo3/cms-core": "^13.4 || ^14.0",
    "typo3/cms-extbase": "^13.4 || ^14.0",
    "typo3/cms-fluid": "^13.4 || ^14.0"
	},
  "suggest": {
    "georgringer/news": "^13.0",
    "georgringer/numbered-pagination": "^2.1"
  },
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p ../default.instance/typo3conf/ext/",
			"[ -L ../default.instance/typo3conf/ext/mp_core ] || ln -snvf ../../../dir-project ../default.instance/typo3conf/ext/mp_core"
		]
	}
}
